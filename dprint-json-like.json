// If NOT using the `beslogic/json-like` preset with eslint-config-beslogic, use "dprint.json" instead.  
{
  // Extended configuration if using beslogic/json-like
  "extends": "https://raw.githubusercontent.com/Samuel-Therrien-Beslogic/beslogic-dprint-configuration/main/dprint.json",
  "typescript": {
    "quoteStyle": "alwaysDouble",
    "quoteProps": "preserve",
    "trailingCommas": "never"
  },
  // includes and excludes from extended configurations are ignored
  "includes": [
    "**/*.{ts,tsx,js,jsx,cjs,mjs,json,jsonc,json5,dmw,md,toml}",
    "**/dockerfile"
  ],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/coverage", // created on install by nx
    "**/build",
    "**/cache",
    "**/dist",
    "**/tmp",
    "**/obj"
  ],
}
